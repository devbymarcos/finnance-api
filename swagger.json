    "paths": {
        "/user": {
            "get": {
                "summary": "Busca usuário",
                "description": "Retorna o user do sistema",
                "tags": ["Usuario"],
                "responses": {
                    "400": {
                        "description": "Usuário não encontrado ou não registrado"
                    },
                    "200": {
                        "description": "ok",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "first_name": {
                                            "type": "string",
                                            "examplo": "Marcia"
                                        },
                                        "last_name": {
                                            "type": "string",
                                            "examplo": "Silva"
                                        },
                                        "email": {
                                            "type": "string",
                                            "examplo": "marcia@teste.com.br"
                                        },
                                        "photo": {
                                            "type": "string",
                                            "examplo": "/storage/4564564.png"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Cria um novo usuário",
                "description": "Cria um novo usuário no sistema",
                "tags": ["Usuario"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "first_name": {
                                        "type": "string",
                                        "example": "fulano"
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "example": "Silva"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "fulana@teste.com.br"
                                    },
                                    "passwd": {
                                        "type": "string",
                                        "example": "aquivaiasenha"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "first_name": {
                                            "type": "string",
                                            "examplo": "Marcia"
                                        },
                                        "last_name": {
                                            "type": "string",
                                            "examplo": "Silva"
                                        },
                                        "email": {
                                            "type": "string",
                                            "examplo": "marcia@teste.com.br"
                                        },
                                        "photo": {
                                            "type": "string",
                                            "examplo": "/storage/4564564.png"
                                        },
                                        "token": {
                                            "type": "string",
                                            "exemplo": "jwt-asdasdmlmd;oqweodncc897y987d987as98d7abcascduacb"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "summary": "Login de usuário",
                "description": "Essa rota responsável pela autenticao do usuário no sistema, ela retorna um token",
                "tags": ["Login"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "fulana@teste.com.br"
                                    },
                                    "passwd": {
                                        "type": "string",
                                        "example": "string"
                                    }
                                }
                            }
                        }
                    },
                    "responses": {
                        "204": {
                            "description": "Usuário nao encontrado ou não registrado"
                        },
                        "200": {
                            "description": "OK",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "type": "object",
                                        "properties": {
                                            "first_name": {
                                                "type": "string",
                                                "examplo": "Marcia"
                                            },
                                            "last_name": {
                                                "type": "string",
                                                "examplo": "Silva"
                                            },
                                            "email": {
                                                "type": "string",
                                                "examplo": "marcia@teste.com.br"
                                            },
                                            "photo": {
                                                "type": "string",
                                                "examplo": "/storage/4564564.png"
                                            },
                                            "token": {
                                                "type": "string",
                                                "exemplo": "jwt-asdasdmlmd;oqweodncc897y987d987as98d7abcascduacb"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/wallet/{id}": {
            "get": {
                "summary": "Busca por 'id'",
                "tags": ["Wallet"],
                "description": "Essa rota retorna todas as carteiras registradas",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Id da carteira",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {}
                                }
                            }
                        }
                    }
                }
            }
        },
        "/wallets": {
            "get": {
                "summary": "Retorna todas as carteiras",
                "description": "Essa rota retorna todas as carteiras registradas",
                "tags": ["Wallet"]
            }
        }
    }
}
