                                }
                            }
                        }
                    }
                },
                "responses":{
                  "200": {
                            "description": "OK",
                            "content": {
                                "application/json": {
                                    "schema": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": "1"
                                            },
                                            "user_id": {
                                                "type": "integer",
                                                "example": "2"
                                            },
                                            "name": {
                                                "type": "string",
                                                "example": "name wallet"
                                            },
                                            "description": {
                                                "type": "string",
                                                "example": "description wallet"
                                            },
                                            "option_wallet": {
                                                "type": "integer",
                                                "example": "1 or 0 -significa ativo or inativo como preferencia do sistema"
                                            },
                                            "created_at": {
                                                "type": "string",
                                                "example": "2023-10-01T14:30:18.000Z"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                }
            },
            "put":{
              "summary": "Atualiza carteira",
              "tags": ["Wallet"],
              "responses":{
              }
            
            },
