{
    "openapi": "3.0.1",
    "info": {
        "title": "Wallet Control",
        "description": "Esta api foi criada para o treinamento javascriptPlus",
        "contact": {
            "email": "marcoslopes.dev@gmail.com"
        },
        "version": "Beta"
    },
    "servers": [
        {
            "url": "http:localhost:4000",
            "description": "API localde teste"
        }
    ],
    "paths": {
        "/user": {
            "post": {
                "summary": "Cria um novo usuário",
                "description": "Cria um novo usuário no sistema",
                "tags": ["Usuario"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "first_name": {
                                        "type": "string",
                                        "example": "fulano"
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "example": "Silva"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "fulana@teste.com.br"
                                    },
                                    "passwd": {
                                        "type": "string",
                                        "example": "aquivaiasenha"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "400": {
                        "description": "Usuário nao encontrado ou não registrado"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "first_name": {
                                            "type": "string",
                                            "examplo": "Marcia"
                                        },
                                        "last_name": {
                                            "type": "string",
                                            "examplo": "Silva"
                                        },
                                        "email": {
                                            "type": "string",
                                            "examplo": "marcia@teste.com.br"
                                        },
                                        "photo": {
                                            "type": "string",
                                            "examplo": "/storage/4564564.png"
                                        },
                                        "token": {
                                            "type": "string",
                                            "exemplo": "jwt-asdasdmlmd;oqweodncc897y987d987as98d7abcascduacb"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "summary": "Login de usuário",
                "description": "Essa rota responsável pela autenticao do usuário no sistema, ela retorna um token",
                "tags": ["Login"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Login"
                            }
                        }
                    }
                },
                "responses": {
                    "204": {
                        "description": "Usuário nao encontrado ou não registrado"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "first_name": {
                                            "type": "string",
                                            "examplo": "Marcia"
                                        },
                                        "last_name": {
                                            "type": "string",
                                            "examplo": "Silva"
                                        },
                                        "email": {
                                            "type": "string",
                                            "examplo": "marcia@teste.com.br"
                                        },
                                        "photo": {
                                            "type": "string",
                                            "examplo": "/storage/4564564.png"
                                        },
                                        "token": {
                                            "type": "string",
                                            "exemplo": "jwt-asdasdmlmd;oqweodncc897y987d987as98d7abcascduacb"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "properties": {
                    "first_name": {
                        "type": "string",
                        "examplo": "Marcia"
                    },
                    "last_name": {
                        "type": "string",
                        "examplo": "Silva"
                    },
                    "email": {
                        "type": "string",
                        "examplo": "marcia@teste.com.br"
                    },
                    "photo": {
                        "type": "string",
                        "examplo": "/storage/4564564.png"
                    },
                    "token": {
                        "type": "string",
                        "exemplo": "jwt-asdasdmlmd;oqweodncc897y987d987as98d7abcascduacb"
                    }
                }
            },
            "Login": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "passwd": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
