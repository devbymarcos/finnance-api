{{>partials/header}}
    <article class="header__section">
    <div class="header__title">
        <h4>Carteiras</h4>
        {{>pages/widgets/wallet/wallet-header}}
    </div>
        
    <hr>
    </article>
    <section class="app__container">
        <form class="app_form"  action="/wallet/save" method="post">
            <input type="hidden" name="action" value="update">
            <input type="hidden" name="wallet_id" value="{{wallet.id}}">
            <div class="ds-flex">
                <div class="input-group_g2">
                    <label>Nome Carteira</label>
                    <input class="input-control" type="text"  name="name" value="{{wallet.name}}">
                </div>
                <div class="input-group_g2">
                    <label>Descrição</label>
                    <input class="input-control" type="text"  name="description" value="{{wallet.description}}">
                </div>
            </div>
            <div class="input-group">
                <button class="btn btn--blue">Salvar</button>
                <button class="btn btn--red"
                    data-post="/wallet/save"
                    data-id="{{wallet.id}}"
                    data-action="delete"
                    data-confirm="Deseja apagar a Carteira ? Todos os registro dessa carteira serão removidos">Delete</button>
                <a href="/carteiras" class="btn btn--yellow">Voltar</a>
            </div>
        </form>
   
       
    </section>
    
    {{>partials/footer}}