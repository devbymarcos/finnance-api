<div class="card login-card">
    <div class="card-body">
        <div class="brand-wrapper">
            <img width="200" src="images/appmoney-logo.svg" alt="logo" />
        </div>

        <!--LOGIN-->
        <div data-action="forget" class="box-login form-step">
            <p class="login-card-description">Faça o seu login</p>
            <form
                data-form
                class="app_form ajax_off"
                action="/login-validation"
                method="post"
            >
                <div class="input-group">
                    <input
                        type="text"
                        class="input-control"
                        id="Username"
                        name="email"
                        required
                        autocomplete="off"
                        value="visitor@teste.com.br"
                    />
                    <span>Usuário</span>
                </div>
                <div class="input-group">
                    <input
                        type="password"
                        class="input-control"
                        id="passwd"
                        name="passwd"
                        required
                        value="appmoney"
                    />
                    <span>Senha</span>
                </div>
                <div class="remenber">
                    <label>
                        <input type="checkbox" name="remember" value="true" />
                        Lembre-me
                    </label>
                </div>
                <div class="">
                    <input
                        data-submit
                        type="submit"
                        class="login-btn"
                        value="login"
                    />
                </div>
            </form>
            <a href="#" class="forgot-password-link btn-action"
                >Recuperar senha</a
            >
            <a href="/registro" class="forgot-password-link">Registre-se</a>
        </div>
        <!--RECUPERAÇÃO DE SENHA-->
        <div data-action="login" class="box-forget form-step">
            <p class="login-card-description">Recuperar Senha</p>

            <form action="/forget-action" method="post">
                <div class="input-group">
                    <label for="Useremail">Email</label>
                    <input
                        type="text"
                        class="input-control"
                        id="Useremail"
                        name="email"
                        placeholder="Insira o email cadastrado"
                    />
                </div>

                <div class="col-md-8 col-lg-7">
                    <input
                        type="submit"
                        class="btn login-btn"
                        value="Recuperar"
                    />
                </div>
            </form>
            <a href="#" class="forgot-password-link btn-action"
                >Realizar login</a
            >
        </div>
    </div>
</div>

