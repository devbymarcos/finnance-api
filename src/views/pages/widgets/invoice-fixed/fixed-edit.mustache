{{>partials/header}}
    <article class="header__section">
        <div class="header__title">
            <h4>Editar lançamento fixo</h4>
            {{>pages/widgets/invoice-fixed/fixed-header}}
        </div>
        
        <hr>
    </article>
    <section class="app__container">
        <div class="fixed_header">
            <p class="{{classe}}">Esta é uma conta do tipo {{typeName}}</p>
        </div>
        <form class="app_form" action="/fixed/update" method="post">

            <input type="hidden" name="action" value="update">
            <input type="hidden" name="fixed_id" value="{{invoice.id}}">

            <div class="input-group">
                <label for="description">Descrição</label>
                <input id="description" name="description" type="text" class="input-control" 
                value="{{invoice.description}}">
            </div>
            <div class="ds-flex">
                <div class="input-group_g2">
                    <label for="price">Valor</label>
                    <input id="price" name="price" type="text" class="input-control" 
                    value="{{priceBr}}">
                </div>
                <div class="input-group_g2">
                    <label for="date">data</label>
                    <input id="date" name="date" type="date" class="input-control"
                     value="{{invoice.due_at}}">
                </div>
            </div>
            <div class="ds-flex">
                <div class="input-group_g2">
                    <label for="wallet">Carteira</label>
                    <select id="wallet" class="input-control" name="wallet">
                        {{#setWallet}}
                            <option {{selAttr}}  value="{{id}}">
                            {{name}}
                            </option>
                        {{/setWallet}}
                    </select>
                </div>
                <div class="input-group_g2">
                    <label for="category">Categoria</label>
                    <select id="category" class="input-control" name="category">
                        {{#setCategory}}
                            <option {{selAttr}}  value="{{id}}">
                            {{name}}
                            </option>
                        {{/setCategory}}
                    </select>
                </div>
            </div>
            <div class="input-group">
                <label>Status:</label>
                <select class="input-control" name="pay">
                    <option {{status.selUnpaid}}  value="unpaid">Inativa</option>
                    <option {{status.selPaid}}  value="paid">Ativa</option>
                </select>
            </div>
           
            <div class="col  input-group">
                <input type="hidden" class="input-control" name="type" value="{{invoice.type}}">
            </div>
            
            <button class="btn  btn--blue">Atualizar</button>
            <button class="btn btn--red" 
            data-post="/invoice/save" 
            data-id="{{invoice.id}}" 
            data-action="delete" 
            data-type="{{invoice.type}}" 
            data-confirm="Deseja apagar a Receita">Delete</button>
            <a class="btn btn--yellow" href="/fixo">Voltar</a>
                    
        </form>
   
       
    </section>
    {{>partials/footer}}