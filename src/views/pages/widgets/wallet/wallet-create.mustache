{{>partials/header}}
    <article class="header__section">
    <div class="header__title">
        <h4>Carteiras</h4>
        {{>pages/widgets/wallet/wallet-header}}
    </div>
    
    </article>
    <section class="app__container">
        <form class="app_form"  action="/wallet/save" method="post">
            <input type="hidden" name="action" value="create">
            <div class="ds-flex">
                <div class="input-group_g2">
                    <label>Nome Carteira</label>
                    <input class="input-control" type="text"  name="name">
                </div>
                <div class="input-group_g2">
                    <label>Descrição</label>
                    <input class="input-control" type="text"  name="description">
                </div>
            </div>
            <div class="input-group">
                <button type="submit" class="btn btn--blue">Salvar</button>
                <a href="/carteiras" class="btn btn--yellow">Voltar</a>
            </div>
        </form>
   
       
    </section>
    
    {{>partials/footer}}